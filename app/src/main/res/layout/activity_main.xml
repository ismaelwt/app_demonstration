<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@layout/gradient"
    android:layout_height="match_parent"
    tools:context="com.example.ismael.appteste.MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/img"
        android:layout_marginBottom="18dp"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/logo"
            android:background="@drawable/logo"
            android:layout_margin="20dp"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/l1"
        android:layout_below="@id/img"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <ImageButton
            android:id="@+id/location"
            android:layout_alignParentRight="true"
            android:layout_marginRight="30dp"
            android:layout_width="74dp"
            android:layout_height="74dp"
            android:background="@drawable/maps"/>

        <TextView
            android:text="Onde Estamos"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:layout_below="@id/location"
            android:layout_width="wrap_content"
            android:textColor="@color/white"
            android:layout_marginRight="18dp"
            android:layout_height="wrap_content" />


        <ImageButton
            android:id="@+id/calendar"
            android:layout_width="74dp"
            android:layout_height="74dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="50dp"
            android:background="@drawable/calendar2"/>

        <TextView
            android:text="Agende Advogado"
            android:gravity="center"
            android:layout_below="@id/calendar"
            android:layout_width="wrap_content"
            android:textColor="@color/white"
            android:layout_marginLeft="13dp"
            android:layout_height="wrap_content" />


        <ImageButton
            android:id="@+id/about"
            android:layout_centerHorizontal="true"
            android:layout_width="74dp"
            android:layout_height="74dp"
            android:background="@drawable/home2"/>

        <TextView
            android:text="Sindicato"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/about"
            android:textColor="@color/white"
            android:layout_width="70dp"
            android:layout_height="wrap_content"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/l2"
        android:layout_marginTop="50dp"
        android:layout_below="@id/l1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <ImageButton
            android:id="@+id/news"
            android:layout_alignParentRight="true"
            android:layout_marginRight="30dp"
            android:layout_width="74dp"
            android:layout_height="74dp"
            android:background="@drawable/news2"/>

        <TextView
            android:text="Noticias"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:layout_below="@id/news"
            android:layout_width="70dp"
            android:textColor="@color/white"
            android:layout_marginRight="33dp"
            android:layout_height="wrap_content" />


        <ImageButton
            android:id="@+id/contact_us"
            android:layout_width="74dp"
            android:layout_height="74dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="50dp"
            android:background="@drawable/contact_us2"/>

        <TextView
            android:text="Fale Conosco"
            android:gravity="center"
            android:layout_below="@id/contact_us"
            android:layout_width="100dp"
            android:textColor="@color/white"
            android:layout_marginLeft="13dp"
            android:layout_height="wrap_content" />


        <ImageButton
            android:id="@+id/partner"
            android:layout_centerHorizontal="true"
            android:layout_width="74dp"
            android:layout_height="74dp"
            android:background="@drawable/partner2"/>

        <TextView
            android:text="Convenios"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/partner"
            android:textColor="@color/white"
            android:layout_width="70dp"
            android:layout_height="wrap_content"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/l3"
        android:layout_marginTop="50dp"
        android:layout_below="@id/l2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <ImageButton
            android:id="@+id/chat"
            android:layout_marginLeft="30dp"
            android:layout_width="74dp"
            android:layout_height="74dp"
            android:background="@drawable/chats2"/>

        <TextView
            android:text="Chat"
            android:layout_below="@id/chat"
            android:layout_marginLeft="50dp"
            android:layout_width="wrap_content"
            android:textColor="@color/white"
            android:layout_height="wrap_content"/>

        <ImageButton
            android:id="@+id/socio"
            android:layout_centerHorizontal="true"
            android:layout_width="74dp"
            android:layout_height="74dp"
            android:background="@drawable/socio"/>

        <TextView
            android:text="Fique Socio"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/socio"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageButton
            android:id="@+id/beneficios"
            android:layout_alignParentRight="true"
            android:layout_width="74dp"
            android:layout_height="74dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/beneficios"/>

        <TextView
            android:text="Beneficios"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:layout_below="@id/beneficios"
            android:textColor="@color/white"
            android:layout_marginRight="35dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        </RelativeLayout>

</RelativeLayout>
