<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.ismael.appteste.BeneficioActivity">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/imagem"
        android:layout_marginTop="12dp"
        android:layout_width="match_parent"
        android:background="@android:drawable/dialog_holo_light_frame"
        android:layout_height="180dp">

        <ImageView
            android:id="@+id/image"
            android:layout_below="@id/title"
            android:background="@drawable/apertomaos"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="center_horizontal"
            android:adjustViewBounds="true" />

    </LinearLayout>

    <TextView
        android:id="@+id/text"
        android:layout_below="@id/imagem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/btn1"
        android:layout_marginTop="8dp"
        android:drawableLeft="@drawable/add2"
        android:text="Faculdades e Universidades"
        android:layout_below="@id/text"
        android:background="@color/red"
        android:textColor="@color/white"
        android:layout_width="match_parent"
        android:layout_height="40dp" />


    <Button
        android:id="@+id/btn2"
        android:layout_marginTop="8dp"
        android:drawableLeft="@drawable/add2"
        android:text="Cursos e Escolas"
        android:layout_below="@id/btn1"
        android:background="@color/red"
        android:textColor="@color/white"
        android:layout_width="match_parent"
        android:layout_height="40dp" />

    <Button
        android:drawableLeft="@drawable/add2"
        android:text="ConvÃªnios Diversos"
        android:layout_below="@id/btn2"
        android:layout_marginTop="8dp"
        android:background="@color/red"
        android:textColor="@color/white"
        android:layout_width="match_parent"
        android:layout_height="40dp" />
</RelativeLayout>

</ScrollView>
