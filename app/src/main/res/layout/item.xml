<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">


    <TextView
        android:id="@+id/title"
        android:layout_marginTop="8dp"
        android:textSize="18dp"
        android:textColor="#000000"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:id="@+id/imagem"
        android:layout_marginTop="12dp"
        android:padding="8dp"
        android:layout_below="@id/title"
        android:layout_width="match_parent"
        android:background="@android:drawable/dialog_holo_dark_frame"
        android:layout_height="250dp">

        <ImageView
            android:id="@+id/image"
            android:layout_below="@id/title"
            android:background="@drawable/imagem"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="center_horizontal"
            android:adjustViewBounds="true" />

    </LinearLayout>


    <TextView
        android:id="@+id/descrption"
        android:layout_marginTop="5dp"
        android:layout_below="@id/imagem"
        android:textColor="#000000"
        android:layout_height="wrap_content"
        android:layout_width="match_parent" />

    <TextView
        android:id="@+id/leiamais"
        android:text="Leia Mais..."
        android:layout_below="@id/descrption"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="8dp"
        android:gravity="bottom|right"
        android:textColor="@color/wallet_link_text_light"
        android:layout_width="match_parent"
        android:layout_height="50dp" />


</RelativeLayout>